<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="Isolated Storage Example" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="dataTextBox" VerticalAlignment="Top" Margin="10" Width="300"/>
        <Button Content="Зберегти дані" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Click="SaveData_Click"/>
        <Button Content="Завантажити дані" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,40,0,0" Click="LoadData_Click"/>
    </Grid>
</Window>
